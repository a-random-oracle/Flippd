<div class="row">
  <div class="col-xs-6 col-md-6">
    <% if @previous_video %>
      <h5>
        <a href="/videos/<%=@previous_video["id"]%>">
          <span class="glyphicon glyphicon-step-backward" aria-hidden="true"></span>
          <%=@previous_video["title"]%>
        </a>
      </h5>
    <% end %>
  </div>
  <div class="col-xs-6 col-md-6" style="text-align: right;">
    <% if @next_video %>
      <h5>
        <a href="/videos/<%=@next_video["id"]%>">
          <%=@next_video["title"]%>
          <span class="glyphicon glyphicon-step-forward" aria-hidden="true"></span>
        </a>
      </h5>
    <% end %>
  </div>
</div>

<h1 data-flippd-phase="<%= @phase["title"].downcase.gsub(" ", "_") %>"><%= @video["title"] %></h1>
<p class="lead"><%= @video["description"] %></p>

<div id="video" class="embed-responsive embed-responsive-16by9">
  <div id="player"></div>
</div>

<% tags = Tag.all(:video_id => @video["id"]) %>
<div id="tags" class="row" style="margin-top: 1.5em;">
  <div class="col-xs-12 col-md-12">
    <% tags.each do |tag| %>
	<span class="label label-primary"><%=tag.text%></span>
    <% end %>
    <% if @user.has_permission? :add_tag %>
    <a href="#" data-toggle="popover" data-container="#add-tag-popover" data-html="true" data-content="<form method='post' action='/videos/<%=@video['id']%>/add_tag' class='form-horizontal' role='form'><div class='form-group' style='margin-bottom: 0;'><div class='col-md-8' style='padding-right: 1px;'><input type='text' class='form-control' name='text'/></div><div class='col-md-4' style='padding-left: 1px;'><button type='submit' class='btn btn-default form-control'>Add</button></div></form>" onclick="return false"><span class="label label-success">Add a tag</span></a>
    <div id="add-tag-popover"></div>
    <% end %>
  </div>
</div>

<% if @video["resources"] %>
<div id="resources" class="row" style="margin-top: 1.5em;">
  <div class="col-xs-6 col-md-6">
    <h4>Additional Material</h4>
    <ul class="list-unstyled" style="padding-left: 15px; font-size: 120%;">
    <% @video["resources"].each do |resource| %>
      <li style="padding: 3px 0">
        <span class="glyphicon glyphicon-<%=resource["icon"]%>" aria-hidden="true"></span>
        &nbsp; <a href="<%=resource["url"]%>"><%=resource["title"]%></a>
      </li>
    <% end %>
    </ul>
  </div>
</div>
<% end %>

<script>
  // 2. This code loads the IFrame Player API code asynchronously.
  var tag = document.createElement('script');

  tag.src = "https://www.youtube.com/iframe_api";
  var firstScriptTag = document.getElementsByTagName('script')[0];
  firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

  // 3. This function creates an <iframe> (and YouTube player)
  //    after the API code downloads.
  var player;
  function onYouTubeIframeAPIReady() {
    player = new YT.Player('player', {
      videoId: '<%= @video["youtube"] %>'
    });
  }
  function stopVideo() {
    player.stopVideo();
  }
</script>
